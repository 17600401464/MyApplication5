<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.panyutianmusicplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.panyutain.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.panyutain.activity.IndexPager" >
        </activity>
        <activity android:name="com.panyutain.activity.LoginPager" />
        <activity android:name="com.panyutain.activity.RegisterPager" />
        <activity android:name="com.panyutain.activity.Songactivity" />
        <activity android:name="com.panyutain.activity.HistoryPager" />
        <activity android:name="com.panyutain.activity.LikePager" />
        <activity android:name="com.panyutain.activity.Animator" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>